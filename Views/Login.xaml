<Window x:Class="CoursesManagmnetSYS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoursesManagmnetSYS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Background" Value="Transparent" ></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="250"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border 
                          Background="Transparent" 
                          BorderThickness="3" 
                          BorderBrush="Black" 
                          CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"></ScrollViewer>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Width" Value="250"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="3" ></Setter>
            <Setter Property="BorderBrush" Value="Black" ></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border
                           Background="Transparent" 
                           BorderThickness="3" 
                           BorderBrush="Black" 
                           CornerRadius="12"
                          >
                            <ScrollViewer x:Name="PART_ContentHost"></ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                          Background="Black"
                           CornerRadius="12" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="#FF7A30" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <TextBlock FontSize="25" TextAlignment="Center" FontWeight="ExtraBold" Text="Welcome" Height="49" Width="140"/>
        </StackPanel>
        <Border CornerRadius="15"  Width="325" Height="300" Background="Wheat"  Grid.Column="1" Grid.Row="1">
            <StackPanel Width="325" Height="300" Background="Transparent"  Grid.Column="1" Grid.Row="1" >
                <Grid Height="374">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label HorizontalContentAlignment="Center" FontWeight="Thin" Width="320" VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="red" x:Name="invaliedData" FontSize="16" Grid.Row="0" Height="29" />
                    <StackPanel   Width="350" Height="300"  Grid.Row="1" Grid.RowSpan="4" >
                        <TextBlock Width="250" Text="UserName:" ></TextBlock>
                        <TextBox x:Name="txtUserName"></TextBox>
                        <TextBlock Width="250" Text="Passwrod:" ></TextBlock>
                        <PasswordBox x:Name="txtPassword"></PasswordBox>
                    </StackPanel>
                    <Button IsDefault="True" Content="Login" VerticalAlignment="Top" Grid.Row="3" Width="120" Height="30" Click="Log_in"></Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
