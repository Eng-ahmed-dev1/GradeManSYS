<Window x:Class="CoursesManagmnetSYS.Views.StudentInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoursesManagmnetSYS.Views"
        mc:Ignorable="d"
        Title="StudentInformation" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="CornflowerBlue">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Student Information" FontSize="25" FontWeight="ExtraBold"></TextBlock>
        </Border>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,85">
            <Label FontSize="20" FontWeight="bold" Grid.Row="1" Content="Hello," Width="64" Height="45"></Label>
            <Label x:Name="LabName" FontSize="20" FontWeight="bold" Grid.Row="1" Width="88" Height="45"></Label>
        </StackPanel>

        <DataGrid 
        Name="GridShow"
        Grid.Row="1"
        Grid.RowSpan="3"
        RowBackground="Gray"
        AlternatingRowBackground="White"
        GridLinesVisibility="All"
        HorizontalGridLinesBrush="Black"
        AutoGenerateColumns="False"
        BorderThickness="3" 
        BorderBrush="Black"
        Margin="10,61,10,81"
        IsReadOnly="True"
        SelectionMode="Single">

            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Gray"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Id" Width="40"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Stdname }" Header="Stdname" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding CourseName }" Header="CourseName" Width="*"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Grade}" Header="Grade" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>

        <Button Click="BackToHome" Content="Back" FontWeight="Bold" Width="80" Height="25" Grid.Row="4" Foreground="White" Background="#2832c2" ></Button>
    </Grid>
</Window>
