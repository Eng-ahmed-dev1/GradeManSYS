<Window x:Class="CoursesManagmnetSYS.Views.Administration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoursesManagmnetSYS.Views"
        mc:Ignorable="d"
        Title="Administration" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4A90E2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Administration Panel" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock x:Name="AdminNameLabel" 
                          FontSize="14" 
                          Foreground="#E8F0F8"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Filter Section -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="20,20,20,10" 
                CornerRadius="10"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="2" 
                                Opacity="0.1" 
                                Color="Black"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Select Student:" 
                          VerticalAlignment="Center"
                          FontWeight="SemiBold"
                          Foreground="#333"/>

                <ComboBox Grid.Column="1" 
                         x:Name="StudentComboBox"
                         DisplayMemberPath="UserName"
                         SelectedValuePath="UserId"
                         SelectionChanged="StudentComboBox_SelectionChanged"/>

                <TextBlock Grid.Column="3" 
                          Text="Select Course:" 
                          VerticalAlignment="Center"
                          FontWeight="SemiBold"
                          Foreground="#333"/>

                <ComboBox Grid.Column="4" 
                         x:Name="CourseComboBox"
                         DisplayMemberPath="CourseName"
                         SelectedValuePath="CourseId"/>

                <Button Grid.Column="6" 
                       Content="Load Data" 
                       Width="120"
                       Background="#4A90E2"
                       Foreground="White"
                       Click="LoadData_Click"/>
            </Grid>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="2" 
                Background="White" 
                Margin="20,10,20,10" 
                CornerRadius="10"
                Padding="15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                ShadowDepth="2" 
                                Opacity="0.1" 
                                Color="Black"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                          Text="Students Enrolled in Courses" 
                          FontSize="18" 
                          FontWeight="SemiBold"
                          Foreground="#333"
                          Margin="5,5,5,15"/>

                <DataGrid Grid.Row="1"
                         x:Name="StudentsGrid"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         SelectionMode="Single"
                         GridLinesVisibility="None"
                         HeadersVisibility="Column"
                         BorderThickness="0"
                         Background="Transparent"
                         RowHeight="45"
                         AlternatingRowBackground="#F9FAFB">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#E8EEF4"/>
                            <Setter Property="Foreground" Value="#333"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="15,10"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#D0D7DE"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="15,5"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="Foreground" Value="#333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F0F4F8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                          Binding="{Binding StudentCourseId}" 
                                          Width="80"
                                          IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#666"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Student Name" 
                                          Binding="{Binding StudentName}" 
                                          Width="*"
                                          IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Course Name" 
                                          Binding="{Binding CourseName}" 
                                          Width="*"
                                          IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Current Grade" 
                                          Binding="{Binding Grade}" 
                                          Width="150"
                                          IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="#4A90E2"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Grade Entry Section -->
                <Border Grid.Row="2" 
                       Background="#F8FAFB" 
                       Padding="15"
                       CornerRadius="8"
                       Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Enter Grade:" 
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"
                                  Foreground="#333"
                                  Margin="0,0,15,0"/>

                        <TextBox Grid.Column="1" 
                                x:Name="GradeTextBox"
                                MaxLength="5"/>

                        <Button Grid.Column="3" 
                               Content="Update Grade" 
                               Width="140"
                               Background="#52C41A"
                               Foreground="White"
                               Click="UpdateGrade_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E8EEF4" BorderThickness="0,1,0,0">
            <Grid>
                <Label x:Name="StatusLabel" 
                      Content="" 
                      FontSize="13"
                      Foreground="#666"
                      VerticalAlignment="Center"
                      Margin="20,0"/>

                <Button Content="Logout" 
                       Width="100"
                       Background="#FF4D4F"
                       Foreground="White"
                       HorizontalAlignment="Right"
                       Margin="20"
                       Click="Logout_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
